@model IEnumerable<Olimpos.Models.ventas>

@{
    ViewBag.Title = "Index";
}

<style>
    #Tab {
	margin-top:7px;
        background-color: #e45353;
    }
</style>
<div id="Tab" class="container" style="color:#ffffff">
<h2>Ventas</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table id="Tab" class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha_venta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad_venta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio_total_venta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.clientes.doc_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productos.nom_producto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_venta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad_venta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio_total_venta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.clientes.doc_cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productos.nom_producto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_venta }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_venta }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_venta }) |
        </td>
    </tr>
}

</table>
</div>
