@model IEnumerable<Olimpos.Models.categorias>

@{
    ViewBag.Title = "Index";
}
<style>
    #Tab {
	margin-top:7px;
        background-color: #e45353;
    }
</style>
<div id="Tab" class="container" style="color:#ffffff">
<h2>Categorias</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descrip_categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descrip_categoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_categoria }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_categoria }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_categoria }) |
        </td>
    </tr>
}

</table>
</div>
